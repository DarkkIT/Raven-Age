@model RavenAge.Web.ViewModels.City.CityViewModel
﻿@{
    this.ViewData["Title"] = "Raven City";
}

<head>
    <link rel="stylesheet" href="~/css/city.css" asp-append-version="true" />
</head>

<a class="btn btn-primary" asp-controller="City" asp-action="CreateCity">Create my city!</a>
<div id="wrapper">

    <img class="img-fluid justify-content-center" src="~/images/City/CityMapNew.png" style="width: 1920px; height: 1080px;" />


    <a id="anchor-level1" data-toggle="modal" data-target="#modalCenter">
        <p class="font-weight-bold p-0">Barracks</p>
        <p>Lvl: @Model.Barracks.Level</p>

    </a>

    <a id="anchor-level2" class="text-dark" asp-controller="City" asp-action="TownhallStats" asp-route-enemyName="">
        <p class="font-weight-bold p-0">Townhall</p>
        <p>Lvl: @Model.TownHall.Level</p>

    </a>

    <a id="anchor-level3" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weight-bold p-0">House</p>
        <p>Lvl: @Model.House.Level</p>
    </a>

    <a id="anchor-level4" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weight-bold p-0">Farm - 4</p>
    </a>

    <a id="anchor-level5" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weight-bold p-0">Saw mill - 5</p>
    </a>

    <a id="anchor-level6" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weight-bold p-0">Stone quarry - 6</p>
    </a>

    <a id="anchor-level7" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weight-bold p-0">Marketplace - 7</p>
    </a>

    <a id="anchor-level8" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weighсt-bold p-0">Stone wall - 8</p>
    </a>

    <a id="anchor-level9" class="text-dark" asp-controller="World" asp-action="Index" asp-route-enemyName="">
        <p class="font-weight-bold p-0">World View - 9</p>
    </a>

    <a id="anchor-level10" class="text-dark" asp-controller="" asp-action="" asp-route-enemyName="">
        <p class="font-weight-bold p-0"> lvl 10</p>
    </a>

    <a id="anchor-level11" class="text-dark">
        <p class="font-weight-bold p-0">Avatar - 11</p>
    </a>

</div>

<!-- Modal -->
<div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Barracks</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row justify-content-between">

                    <div class="col-md-3">
                        <p>Archars @Model.Archers</p>
                        <img class="img-fluid justify-content-center" src="~/images/Soldiers/HumanArchar.jpg" />
                    </div>

                    <div class="col-md-3">
                        <p>Infantry</p>
                        <img class="img-fluid justify-content-center" src="~/images/Soldiers/HumanInfantry.jpg" />
                    </div>

                    <div class="col-md-3">
                        <p>Cavalry</p>
                        <img class="img-fluid justify-content-center" src="~/images/Soldiers/HumanCavalery.jpg" />
                    </div>

                    <div class="col-md-3">
                        <p>Artillery</p>
                        <img class="img-fluid justify-content-center" src="~/images/Soldiers/HumanTrebuchet.jpg" />
                    </div>

                </div>

                <div class="row justify-content-between">

                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger col-md-12"></div>
                        <form method="post">

                            <div class="col-md-7">
                                <label asp-for="@Model.HireSoldiersInputModel.Quantity"></label>
                                <input asp-for="@Model.HireSoldiersInputModel.Quantity" class="form-control" />
                                <span asp-validation-for="@Model.HireSoldiersInputModel.Quantity" class="text-danger"></span>
                            </div>

                            <input type="submit" value="Hire" class="btn btn-primary mt-4" style="width: 6.1rem;"/>
                        </form>
                    </div>

                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger col-md-12"></div>
                        <form method="post">

                            <div class="col-md-7">
                                <label asp-for="@Model.HireSoldiersInputModel.Quantity"></label>
                                <input asp-for="@Model.HireSoldiersInputModel.Quantity" class="form-control" />
                                <span asp-validation-for="@Model.HireSoldiersInputModel.Quantity" class="text-danger"></span>
                            </div>

                            <input type="submit" value="Hire" class="btn btn-primary mt-4" style="width: 6.1rem;"/>
                        </form>
                    </div>

                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger col-md-12"></div>
                        <form method="post">

                            <div class="col-md-7">
                                <label asp-for="@Model.HireSoldiersInputModel.Quantity"></label>
                                <input asp-for="@Model.HireSoldiersInputModel.Quantity" class="form-control" />
                                <span asp-validation-for="@Model.HireSoldiersInputModel.Quantity" class="text-danger"></span>
                            </div>

                            <input type="submit" value="Hire" class="btn btn-primary mt-4" style="width: 6.1rem;"/>
                        </form>
                    </div>

                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger col-md-12"></div>
                        <form method="post">

                            <div class="col-md-7">
                                <label asp-for="@Model.HireSoldiersInputModel.Quantity"></label>
                                <input asp-for="@Model.HireSoldiersInputModel.Quantity" class="form-control" />
                                <span asp-validation-for="@Model.HireSoldiersInputModel.Quantity" class="text-danger"></span>
                            </div>

                            <input type="submit" value="Hire"  class="btn btn-primary mt-4" style="width: 6.1rem;" />
                        </form>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <p>@Model.Barracks.Description</p>
            </div>
        </div>
    </div>
</div>