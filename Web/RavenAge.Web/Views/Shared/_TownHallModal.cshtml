@model RavenAge.Web.ViewModels.City.CityViewModel;


<div>

    <div>
        <p>Curent silver: @Model.Silver</p>
        
        <p>Total income: @(Model.Workers * 2)</p>
    </div>

    <div>

        <p>Raise the level of the townhall to increase the silver income </p>

        <div class="row ml-1">
            <a class="button-primary text-success mr-3 btn btn-outline-success" asp-controller="TownHall" asp-action="LevelUp">Level Up</a>

            <p>
                <span>Price:</span>
                <span class="text-warning">Silver: @Model.TownHall.SilverPrice</span>,
                <span class="text-secondary">Stone: @Model.TownHall.StonePrice</span>,
                <span class="text-danger">Wood: @Model.TownHall.WoodPrice</span>
            </p>
        </div>


    </div>

</div>

