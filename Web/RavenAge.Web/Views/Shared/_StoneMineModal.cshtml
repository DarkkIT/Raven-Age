@model RavenAge.Web.ViewModels.City.CityViewModel;


<div>

    <div>
        <p>Current Production: @Model.StoneMine.Production</p>

        <p>Next Level Production: @(Model.StoneMine.Production + 200)</p>
    </div>

    <div>

        <p>Raise the level of the stone mine to increase the stone production </p>

        <div class="row ml-1">
            <a class="button-primary text-success mr-3 btn btn-outline-success" asp-controller="StoneMine" asp-action="LevelUp">Level Up</a>

            <p>
                <span>Price:</span>
                <span class="text-warning">Silver: @Model.WoodMine.SilverPrice</span>,
                <span class="text-secondary">Stone: @Model.WoodMine.StonePrice</span>,
                <span class="text-danger">Wood: @Model.WoodMine.WoodPrice</span>
            </p>
        </div>


    </div>

</div>

